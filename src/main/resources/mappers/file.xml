<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="com.example.Dao.FileDAO">

    <sql id="attachColumns">
        idx ,
        board_idx ,
        original_name ,
        save_name ,
        size ,
        delete_yn ,
        insert_time ,
        delete_time
    </sql>

    <insert id="insertAttach" parameterType="list">
        INSERT INTO FILE_COMMUNITY_BOARD2 (
            <include refid="attachColumns" />
        ) VALUES
        <foreach collection="list" item="list" separator=",">
            #{item.idx} ,
            #{item.boardIdx} ,
            #{item.originalName} ,
            #{item.saveName} ,
            #{item.size} ,
            'N'
        </foreach>
    </insert>
</mapper>